<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Items</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <%- include layout/header %>    
    
    <h2 align="center">ITEMS</H2>
    <p></p>
    <table class="table table-hover">
      <tr>
        <th>No.</th>
        <th>ITEM NAME</th>
        <th>PURCHASING PRICE</th>
        <th>SELLING PRICE</th>
        <th>ACTIONS</th>
      </tr>
      <tr>
      <% query.forEach((item, nomor) => { %>
        <td><%= nomor + 1 %>.</td>    
        <td><%= item.nama_item %></td>
        <td><%= item.price_purchasing %></td>
        <td><%= item.price_selling %></td>
        <td><a href="/items/edit/<%= item.id %>">EDIT</a> || <a href="/items/delete/<%= item.id %>" style="color:red" onclick="return confirm('Are you sure want to delete this record?')">DELETE</a></td> 
      </tr>
    <%  }) %>
    </table>
  </body>
</html>