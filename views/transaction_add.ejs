<!DOCTYPE html>
<html>
  <head>
    <title>add transaction</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <%- include layout/header %>

    <div class="container">
      <h3>ITEM ADD FORM</h3>
      <form action="/transactions/add" method="post" class="form-horizontal">
        <div class="form-group">
          <label class="control-label col-sm-2">Customer :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><select name="dropdown_cus">
                                            <option value="">Choose your customer</option>
                                            <%data_cus.forEach(customer =>{%>
                                            <option value="<%= customer.id %>"><%=customer.customer_name%></option>
                                            <%})%>
                                           </select></p>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2">Item :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><select name="dropdown_item">
                                            <option value="">Choose your item</option>
                                            <%data_item.forEach(item =>{%>
                                            <option value="<%= item.id %>"><%=item.nama_item%></option>
                                            <%})%>
                                           </select></p>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2">Qty :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input type="number" name="qty"/></p>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2"></label>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-success" value="add transaction"/>
          </div>
        </div>
    </div>

  </body>
</html>
