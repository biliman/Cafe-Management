<!DOCTYPE html>
<html>
  <head>
    <title>add item</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <%- include layout/header %>

    <div class="container">
      <h3>ITEM ADD FORM</h3>
      <form action="/items/add" method="post" class="form-horizontal">
        <div class="form-group">
          <label class="control-label col-sm-2">Item Name :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input type="text" name="nama_item"/></p>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2">Purchasing Price :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input type="text" name="price_purchasing"/></p>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2">Selling Price :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input type="text" name="price_selling"/></p>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2"></label>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-success" value="add Item"/>
          </div>
        </div>
    </div>

  </body>
</html>
