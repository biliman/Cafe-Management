<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Customers</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <%- include layout/header %>    
    
    <h2 align="center">CUSTOMERS</H2>
    <p></p>
    <table class="table table-hover">
      <tr>
        <th>No.</th>
        <th>CUSTOMER NAME</th>
        <th>CONTACT NUMBER</th>
        <th>EMAIL</th>
        <th>DATE OF BIRTH</th>
        <th>ACTIONS</th>
      </tr>
      <tr>
      <% query.forEach((customer, nomor) => { %>
        <!-- <%= JSON.stringify(customer) %> -->
        <td><%= nomor + 1 %>.</td>    
        <td><%= customer.customer_name %></td>
        <td><%= customer.no_hp %></td>
        <td><%= customer.email %></td>
        <td><%= customer.date_of_birth %></td>
        <td><a href="/customers/edit/<%= customer.id %>">EDIT</a> || <a href="/customers/delete/<%= customer.id %>" style="color:red" onclick="return confirm('Are you sure want to delete this record?')">DELETE</a></td> 
      </tr>
    <%  }) %>
    </table>
  </body>
</html>